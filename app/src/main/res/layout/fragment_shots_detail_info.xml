<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="stcdribbble.shituocheng.com.qribbble.UI.Fragments.ShotsDetailInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shots_detail_title"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:padding="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/shots_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_below="@id/shots_detail_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shots_create_time"
                android:layout_below="@id/shots_detail_description"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:padding="6dp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shots_tag_recyclerView"
                android:layout_below="@id/shots_detail_description"
                />

            <stcdribbble.shituocheng.com.qribbble.UI.View.CircularNetworkImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/shots_detail_avatar"
                android:layout_below="@id/shots_tag_recyclerView"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/shots_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/shots_tag_recyclerView"
                android:layout_toEndOf="@+id/shots_detail_avatar" />


        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
