<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/user_detail_artwork"
                    android:layout_width="260dp"
                    android:layout_height="260dp" />

                <ImageView
                    android:id="@+id/view_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/user_detail_artwork"
                    android:src="@drawable/ic_remove_red_eye_black_48dp"/>

                <TextView
                    android:id="@+id/shots_view_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/view_icon"
                    android:layout_below="@id/user_detail_artwork"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="9999"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/review_icon"
                    android:src="@drawable/ic_chat_bubble_48pt_2x"
                    android:layout_below="@+id/user_detail_artwork"
                    android:layout_toEndOf="@id/shots_view_times" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shots_review_times"
                    android:layout_below="@id/user_detail_artwork"
                    android:layout_toEndOf="@id/review_icon"
                    android:text="9999"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/favorite_icon"
                    android:layout_below="@id/user_detail_artwork"
                    android:layout_toEndOf="@id/shots_review_times"
                    android:src="@drawable/ic_favorite_black_48dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shots_favorite_times"
                    android:layout_below="@id/user_detail_artwork"
                    android:layout_toEndOf="@id/favorite_icon"
                    android:text="9999"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"/>


                <ImageView
                    android:id="@+id/isGif"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toEndOf="@id/shots_favorite_times"
                    android:layout_below="@id/user_detail_artwork"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>

