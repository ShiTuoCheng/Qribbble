<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="16dp"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="#ece8e8"
        android:padding="6dp"
        android:layout_margin="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:id="@+id/shots_imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" >

            </com.android.volley.toolbox.NetworkImageView>

            <TextView
                android:id="@+id/shots_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shots_imageView"
                android:text="shots_title"
                android:padding="6dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shots_author_textView"
                android:layout_below="@id/shots_title"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="author_name"
                android:layout_alignParentEnd="true"
                android:gravity="end"/>

            <TextView
                android:id="@+id/by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shots_title"
                android:padding="6dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="By"
                android:layout_toLeftOf="@id/shots_author_textView"/>

            <ImageView
                android:id="@+id/view_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/by"
                android:padding="4dp"
                android:src="@drawable/ic_remove_red_eye_black_48dp"/>

            <TextView
                android:id="@+id/shots_view_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view_icon"
                android:layout_below="@id/by"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:text="9999"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/review_icon"
                android:padding="4dp"
                android:src="@drawable/ic_chat_bubble_48pt_2x"
                android:layout_below="@+id/shots_author_textView"
                android:layout_toRightOf="@id/shots_view_times" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shots_review_times"
                android:layout_below="@id/by"
                android:padding="5dp"
                android:layout_toRightOf="@id/review_icon"
                android:text="9999"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/favorite_icon"
                android:layout_below="@id/by"
                android:layout_toRightOf="@id/shots_review_times"
                android:padding="4dp"
                android:src="@drawable/ic_favorite_black_48dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shots_favorite_times"
                android:layout_below="@id/by"
                android:padding="5dp"
                android:layout_toRightOf="@id/favorite_icon"
                android:text="9999"
                android:textColor="@color/colorAccent"/>


            <ImageView
                android:id="@+id/isGif"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/shots_author_textView"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
