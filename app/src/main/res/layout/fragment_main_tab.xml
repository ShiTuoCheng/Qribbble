<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="stcdribbble.shituocheng.com.qribbble.UI.TabFragments.MainTabFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_tab_Layout"
        android:background="@color/colorPrimary"
        app:tabTextColor="#fff"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabIndicatorHeight="4dp"
        android:minHeight="?attr/actionBarSize"/>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/main_tab_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/main_viewPager">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.FloatingActionButton
        app:layout_behavior="stcdribbble.shituocheng.com.qribbble.Utilities.ScrollAwareFABBehavior"
        android:id="@+id/recent_shots_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_file_upload_white_24dp"
        android:clickable="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
